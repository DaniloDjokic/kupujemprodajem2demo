@model LoginViewModel

<div class="col-12 vh-100">

    <div id="login" class="container-fluid justify-content-center align-items-center px-5 py-5">
        <h1 class="text-center m-3">
            Welcome to
        </h1>

        <form method="post" asp-controller="Users" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl" class="w-50 text-center mx-auto wg-3 m-3">
            <div id="loginValidation" class="text-danger fw-bold"></div>

            <img src="/imgs/logo.png" alt="" class="rounded mx-auto"/>

            <div class="form-group m-2">
                <input id="username" asp-for=Username class="form-control rounded-end" placeholder="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group m-2">
                <input id="password" asp-for=Password class="form-control rounded-end" placeholder="Password" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <span asp-validation-for="AreCredentialsValid" class="text-danger"></span>

            <div class="m-2">
                <button type="submit" value="Login" class="w-100 mt-3 btn btn-success">Login</button>
            </div>
        </form>
    </div>
</div>